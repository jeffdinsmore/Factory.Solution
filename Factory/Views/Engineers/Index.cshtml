@{
  Layout = "_Layout";
}
@using Factory.Models;


@if (@Model.Count == 0)
{
  <p>No engineers have been added yet!</p>
}
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId}, new {@class="list-detail"}) </li>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", "Machines", new { id = machine.MachineId}, new {@class="list-detail"}) </li>
}
<br>
<p>@Html.ActionLink("Add New Engineer", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>