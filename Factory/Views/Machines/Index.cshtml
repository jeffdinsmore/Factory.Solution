@{
  Layout = "_Layout";
}
@using Factory.Models;

<h3>List of Machines:</h3>

@if (@Model.Count == 0)
{
  <p>No machines have been added yet!</p>
}
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId}, new {@class="list-detail"}) </li>
}
<br>
<p>@Html.ActionLink("Add New Machine", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>