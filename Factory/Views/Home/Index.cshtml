@if (Model.Engineers.Count == 0)
{
  <p>No Engineers have been added yet!</p>
}
@foreach (var join in Model.Engineers)
{
  <li>@Html.ActionLink($"{join.Engineer.EngineerName}", "Details", new { id = join.Engineer.EngineerId}, new {@class="list-detail"}) </li>
}
<br>
<p>@Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new {@class="btn btn-light btn-sm"})</p>

